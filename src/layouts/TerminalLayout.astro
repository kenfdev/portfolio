---
import '../styles/global.css';
import Frame from '../components/Terminal/Frame.astro';
import BootSequence from '../components/Terminal/BootSequence.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description: string;
  lang: 'en' | 'ja';
  currentPath: string;
}

const { title, description, lang, currentPath } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <SEO
      title={title}
      description={description}
      lang={lang}
      currentPath={currentPath}
    />
  </head>
  <body>
    <BootSequence />
    <Frame lang={lang} currentPath={currentPath}>
      <slot />
    </Frame>
  </body>
</html>
