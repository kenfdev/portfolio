---
interface Props {
  title: string;
  description: string;
  techStack: string[];
  role?: string;
  period?: string;
  githubUrl?: string;
  liveUrl?: string;
}

const { title, description, techStack, role, period, githubUrl, liveUrl } = Astro.props;
const id = title.toLowerCase().replace(/\s+/g, '-');
---

<article class="timeline-item" data-project-id={id}>
  <div class="timeline-marker">
    <div class="timeline-dot"></div>
    <div class="timeline-line"></div>
  </div>

  <div class="timeline-content">
    <div class="timeline-period">{period}</div>

    <button
      class="project-header"
      aria-expanded="false"
      aria-controls={`project-details-${id}`}
    >
      <div class="project-main">
        <h3 class="project-title">{title}</h3>
        {role && <span class="project-role">{role}</span>}
      </div>
      <p class="project-desc">{description}</p>
      <div class="tech-tags">
        {techStack.map((tech) => (
          <span class="tech-tag">{tech}</span>
        ))}
      </div>
      <span class="expand-icon" aria-hidden="true">+</span>
    </button>

    <div
      id={`project-details-${id}`}
      class="project-details"
      hidden
    >
      <div class="details-content">
        <div class="details-body">
          <slot />
        </div>
        {(githubUrl || liveUrl) && (
          <div class="details-links">
            {githubUrl && <a href={githubUrl} target="_blank" rel="noopener noreferrer">[GitHub]</a>}
            {liveUrl && <a href={liveUrl} target="_blank" rel="noopener noreferrer">[Live Demo]</a>}
          </div>
        )}
      </div>
    </div>
  </div>
</article>

<style>
  .timeline-item {
    display: flex;
    gap: 1.5rem;
    position: relative;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
    width: 20px;
  }

  .timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--accent-primary);
    border: 2px solid var(--bg-primary);
    box-shadow: 0 0 0 2px var(--accent-primary);
    z-index: 1;
    margin-top: 0.25rem;
  }

  .timeline-line {
    width: 2px;
    flex-grow: 1;
    background-color: var(--bg-hover);
    margin-top: 0.5rem;
  }

  .timeline-item:last-child .timeline-line {
    display: none;
  }

  .timeline-content {
    flex-grow: 1;
    padding-bottom: 2rem;
  }

  .timeline-period {
    color: var(--accent-secondary);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: monospace;
  }

  .project-header {
    width: 100%;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--bg-hover);
    border-radius: 4px;
    cursor: pointer;
    text-align: left;
    color: var(--text-primary);
    font-family: inherit;
    font-size: inherit;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    transition: background-color 0.2s ease, border-color 0.2s ease;
    position: relative;
  }

  .project-header:hover {
    background-color: var(--bg-hover);
    border-color: var(--accent-primary);
  }

  .project-main {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.75rem;
  }

  .project-title {
    color: var(--accent-primary);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
  }

  .project-role {
    color: var(--accent-secondary);
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    background-color: transparent;
    border: 1px solid var(--accent-secondary);
    border-radius: 3px;
  }

  .project-desc {
    color: var(--text-primary);
    margin: 0;
    line-height: 1.5;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.25rem;
  }

  .tech-tag {
    color: var(--accent-secondary);
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    border: 1px solid var(--bg-hover);
    border-radius: 3px;
  }

  .expand-icon {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: var(--text-muted);
    font-size: 1rem;
    transition: transform 0.2s ease;
  }

  .project-header[aria-expanded="true"] .expand-icon {
    transform: rotate(45deg);
  }

  .project-details {
    border-left: 2px solid var(--accent-primary);
    margin-left: 1rem;
    margin-top: 0.5rem;
  }

  .project-details[hidden] {
    display: none;
  }

  .details-content {
    padding: 1rem 1.5rem;
    background-color: var(--bg-secondary);
    border-radius: 0 4px 4px 0;
  }

  .details-body {
    line-height: 1.8;
  }

  .details-body :global(p) {
    margin-bottom: 0.75rem;
  }

  .details-links {
    margin-top: 1rem;
    font-size: 0.875rem;
  }

  .details-links a {
    margin-right: 1rem;
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .timeline-item {
      gap: 1rem;
    }

    .timeline-marker {
      width: 16px;
    }

    .timeline-dot {
      width: 10px;
      height: 10px;
    }

    .project-title {
      font-size: 1rem;
    }
  }
</style>

<script>
  document.querySelectorAll('.project-header').forEach((button) => {
    button.addEventListener('click', () => {
      const expanded = button.getAttribute('aria-expanded') === 'true';
      const controlsId = button.getAttribute('aria-controls');
      const details = document.getElementById(controlsId || '');

      button.setAttribute('aria-expanded', String(!expanded));

      if (details) {
        details.hidden = expanded;
      }
    });
  });
</script>
